@model Cinema

<div class="row mt-2">
    <h1><a href="/Admin/Cinema/Index"><i class="bi bi-arrow-left"></i> </a>  Edit Cinema @Model.Name</h1>
</div>
<div class="row">
    <form action="/Admin/Cinema/Edit" method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Cinema Name</label>
            <input type="text" class="form-control" id="name" value="@Model.Name" name="Name" placeholder="Cinema Name">
            <input type="hidden" name="Id" value="@Model.Id" />
        </div>
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
        <div class="mb-3">
            <label for="Description" class="form-label">Cinema Description</label>
            <input type="text" class="form-control" id="Description" value="@Model.Description" name="Description" placeholder="Cinema Description">
            <input type="hidden" name="Id" value="@Model.Id" />
        </div>
        <span class="text-danger" asp-validation-for="@Model.Description"></span>

        <div class="mb-3">
            <label for="CinemaLogo" class="form-label">Cinema Logo</label>
            <input type="text" class="form-control" id="CinemaLogo" value="@Model.CinemaLogo" name="CinemaLogo" placeholder="Cinema Logo">
            <input type="hidden" name="Id" value="@Model.Id" />
        </div>
        <span class="text-danger" asp-validation-for="@Model.CinemaLogo"></span>

        <div class="mb-3">
            <label for="Address" class="form-label">Cinema Address</label>
            <input type="text" class="form-control" id="Address" value="@Model.Address" name="Address" placeholder="Cinema Address">
            <input type="hidden" name="Id" value="@Model.Id" />
        </div>
        <span class="text-danger" asp-validation-for="@Model.CinemaLogo"></span>



        <br />
        <button type="submit" class="btn btn-primary">Save</button>

    </form>

</div>